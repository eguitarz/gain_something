- if idx - 1 >= 0
  #lightbox_previous_button.prevent-quit
    = link_to collection_path(@collection, idx: idx-1), remote: true do
      .btn-round.btn-prev
        = icon('angle-left')

- if idx + 1 < @collection.resources.count
  #lightbox_next_button.prevent-quit
    - next_idx = (idx || 0).to_i + 1
    = link_to collection_path(@collection, idx: idx+1), remote: true do
      .btn-round.btn-next
        = icon('angle-right')