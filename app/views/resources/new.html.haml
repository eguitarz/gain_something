= form_for [@course, @resource] do |f|
	= f.label "Course: #{@course.name}"
	= f.text_field :title, placeholder: 'title'
	= f.hidden_field :mime, value: 'text'
	= f.text_area :description, id: 'resource-description', value: 'Write something...', class: 'hidden'
	#mdeditor
	= f.submit 'Create', class: 'btn-normal'