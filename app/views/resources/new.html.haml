= form_for [@course, @resource] do |f|
	= f.hidden_field :mime, value: @mime
	- if @mime == 'text'
		= f.text_field :title, placeholder: 'Edit title here'
		= f.text_area :description, id: 'resource-description', placeholder: 'Write something...'
	- if @mime == 'link' || @mime == 'video'
		= f.text_field :url, placeholder: 'Post url', id: 'link-url'
		= f.hidden_field :title, id: 'link-title'
		= f.hidden_field :description, id: 'link-description'
		.preview

	= f.submit 'Attach', class: 'btn-big'
	= f.button 'Cancel', class: 'btn-big btn-cancel', :'data-dest' => "#{edit_course_path(@course.id)}"